@page
@model TesteSPA.RazorPages.Pages.Task.Create.Index
@{
    ViewData["Title"] = "Novas Tarefas";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<hr/>

<div>
    <h2 class="text-center">Preencha os campos</h2>

    <form method="post">
    <div class="form-group">
        <label for="Title">Título:</label>
        <input type="text" class="form-control" id="Title" name="Title">
    </div>
    <div class="form-group">
        <label for="Description">Descrição:</label>
        <input type="text" class="form-control" id="Description" name="Description">
    </div>
    <div class="form-group">
        <label for="DateTime">Data e Hora:</label>
        <input type="datetime-local" class="form-control" id="dateTime" name="dateTime">
    </div>
    <div class="form-group">
        <label for="Time">Hora:</label>
        <input type="time" class="form-control" id="time" name="time">
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["SuccessMessage"]
        </div>
    }

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        var successMessage = document.querySelector('.alert-success');
        if (successMessage) {
            var form = document.getElementById('taskForm');
            var inputs = form.querySelectorAll('input[type="text"], input[type="datetime-local"], input[type="time"]');
            inputs.forEach(function(input) {
                input.value = '';
            });
        }
    });
    </script>
</div>